<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fadeScrollbars="false">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20.0dip" android:id="@+id/gps_state_id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textSize="20.0dip" android:id="@+id/gps_satellite_id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textSize="20.0dip" android:id="@+id/gps_signal_id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textSize="20.0dip" android:id="@+id/gps_result_id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Chronometer android:textSize="20.0dip" android:id="@+id/gps_time_id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center|bottom" >
        <Button android:textSize="25.0dip" android:id="@+id/gps_bt_ok" android:layout_width="140dp" android:layout_height="80dp" android:text="@string/Success" android:layout_alignParentBottom="true" 
        		android:layout_alignParentLeft="true" />
       <Button android:textSize="25.0dip" android:id="@+id/gps_bt_failed" android:layout_width="140dp" android:layout_height="80dp" android:text="@string/Failed" android:layout_alignParentBottom="true" 
        		android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
